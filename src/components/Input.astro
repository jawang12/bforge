---
import { twMerge } from 'tailwind-merge';

const { name, id, type, class: className } = Astro.props;
---

<div class={twMerge('relative z-0 group', className)}>
  <div
    class='absolute -z-10 inset-0 outline outline-2 -outline-offset-2 outline-zinc-700 [mask-image:linear-gradient(220deg,transparent,transparent_10px,black_10px)] group-focus-within:outline-fuchsia-500'
  >
  </div>
  <svg
    width='24'
    height='24'
    viewBox='0 0 24 24'
    fill='none'
    xmlns='http://www.w3.org/2000/svg'
    class='absolute -z-10 right-0 top-0 group-focus-within:text-fuchsia-500 text-zinc-700'
  >
    <path d='M0 1H12.2667L23 11.7333V24' stroke='currentColor' stroke-width='2'
    ></path>
  </svg>
  <input
    type={type}
    name={name}
    id={id}
    class='bg-transparent h-12 w-full outline-none px-4'
  />
</div>
