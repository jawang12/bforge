---
import { CutCornerButton } from '../components/CutCornerButton';
import PagesContent from '../components/PagesContent.astro';
import PagesHero from '../components/PagesHero.astro';
import DefaultLayout from '../layouts/Default.astro';
import Input from '../components/Input.astro';
import Textarea from '../components/Textarea.astro';
---

<DefaultLayout>
  <PagesHero>
    <p
      class='uppercase tracking-wider font-extrabold text-center text-zinc-500'
    >
      Let's Talk
    </p>
    <h1
      class='mt-4 font-heading font-black text-5xl md:text-6xl lg:text-7xl text-center'
    >
      Contact Us
    </h1>
    <p
      class='text-center text-xl md:text-2xl mt-6 max-w-xl mx-auto text-zinc-400'
    >
      We're here to help and answer any questions you may have. Reach out to us
      to learn more about our services, get support, or to apply for positions.
      We look forward to hearing from you.
    </p>
  </PagesHero>
  <PagesContent>
    <div class='max-w-xl mx-auto'>
      <h2 class='font-heading font-black text-3xl'>
        What can we help you with?
      </h2>
      <form
        class='flex flex-col mt-8'
        name='contact'
        method='POST'
        data-netlify='true'
      >
        <label for='name'>Name</label>
        <Input id='name' type='text' name='name' class='mt-1' />
        <label for='email' class='mt-4'>Email</label>
        <Input type='email' name='email' id='email' class='mt-1' />
        <label for='message' class='mt-4'>Message</label>
        <Textarea name='message' id='message' class='mt-1' />
        <CutCornerButton className='mt-4'>Send Message</CutCornerButton>
      </form>
    </div>
  </PagesContent>
</DefaultLayout>
